<Window x:Class="ThreeDPdfMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="211" Width="616">
    <Grid>
        <Button x:Name="ButtonSTLFile" Content="Choose .stl file" HorizontalAlignment="Left" Margin="20,43,0,0" VerticalAlignment="Top" Width="123" Click="ButtonSTLFile_Click" ToolTip="Choose the OrthoVis session file to use"/>
        <Button x:Name="ButtonMakePDF" Content="Make 3D pdf" HorizontalAlignment="Left" Margin="20,108,0,0" VerticalAlignment="Top" Width="144" Click="ButtonMakePDF_Click"/>
        <Label x:Name="LabelSessionFile" Content="No file chosen" HorizontalAlignment="Left" Margin="20,68,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelDebug" Content="" HorizontalAlignment="Left" Margin="20,0,0,10" VerticalAlignment="Bottom"/>
        <Label Content="WARNING: the stl file name and path must NOT have any spaces." HorizontalAlignment="Left" Margin="33,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
